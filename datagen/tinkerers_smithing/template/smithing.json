{
  "type": "nbtcrafting:smithing",
  "base": {
    "item": "{{ base_item }}",
    "data": {
      "require": {
        "Damage": "{{ base_require_damage }}",
        "RepairCost": "{{ base_require_repaircost }}"
      }
    }
  },
  "ingredient": {
    "item": "{{ ingredient_item }}"
  },
  "result": {
    "item": "{{ result_item }}",
    "data": {
      "$": "$base",
      "Damage": "{{ result_damage }}",
      "RepairCost": "{{ result_repaircost }}"
    }
  }
}